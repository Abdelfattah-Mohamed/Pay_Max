<!DOCTYPE html>
<html>
<head>
	<title>Bay Max</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<style>

	
</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg Nav">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" <%= link_to "Bay_Max" , home_path %></a>
			</div>
			<ul class="nav navbar-nav" ,    position="fixed">
				<li class="Nav2"><a class="ss" <%= link_to "Home" , home_path %>></a></li>
				<li class="Nav2"><a class="ss" <%= link_to "Basic life skills" , section1_path %>></a></li>
 				<li class="Nav2"><a class="ss" <%= link_to "Basic life support" , section2_path %>></a></li>
 				<li class="Nav2"><a class="ss" <%= link_to "Injection" , section3_path %>></a></li>
 				<li class="Nav2"><a class="ss" <%= link_to "Article" , section4_path %>></a></li>
				<li class="Nav2"><a class="ss" <%= link_to "Todo" , todo_lists_path %>></a></li>
				<li class="Nav2"><a class="ss" <%= link_to "Q & Ans" , posts_path %>></a></li>

			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="Nav2"><a class="ss" <%= link_to "Create Question" , new_post_path %>></li>
				<li class="Nav2"><a class="ss" <%= link_to "Contact" , contact_path %>></li>
				<li class="Nav2"><a class="ss" <%= link_to "About" , about_path %>></li>
				<% if user_signed_in? %>
					<li class="Nav2"><a class="ss" <%= link_to "Log out", destroy_user_session_path, method: :delete %>></li>
					<li class="Nav2"><a class="ss" <%= link_to "Edit Profile", edit_user_registration_path %>></li>
				<% else %>
					<li class="Nav2"><a class="ss" <%= link_to "Login", new_user_session_path %>></li>
					<li class="Nav2"><a <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>></li>
				<% end %>
				
			</ul>
		</div>
	</nav>
	<div class="well">sdaf</div>
	
		<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert alert-info") %>
		<% end %>
		
		<%= yield %>

</body>
</html>
