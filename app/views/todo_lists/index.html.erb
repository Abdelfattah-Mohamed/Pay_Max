<div class="container">
<p id="notice"><%= notice %></p>
<div class= "well">
  <h1 style="text-align: center;">Todo Lists</h1>
</div>


<div class="table100 ver1 m-b-110">
  <div class="table100-head">
    <table>
      <thead>
        <tr>
          <th class="cell100 column1">Title</th>
          <th class="cell100 column2">Description</th>
          <th class="cell100 column3">Show</th>
          <th class="cell100 column4">Edit</th>
          <th class="cell100 column5">Delete</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="table100-body js-pscroll">
    <table>
      <tbody>
        <% @todo_lists.each do |todo_list| %>
        <tr class="row100 body">
          <td class="cell100 column1"><%= todo_list.title %></td>
          <td class="cell100 column2"><%= todo_list.description %></td>
          <td class="cell100 column3"><%= link_to 'Show', todo_list, class: "btn btn-primary" %></td>
          <td class="cell100 column4"><%= link_to 'Edit', edit_todo_list_path(todo_list), class: "btn btn-primary"  %></td>
          <td class="cell100 column5"><%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



<br>

<div class= "well">
  <%= link_to 'New Todo list', new_todo_list_path ,class:"btn btn-primary"%>
</div>
</div>